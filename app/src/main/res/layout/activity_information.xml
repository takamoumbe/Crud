<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".Information">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="374dp"
        android:layout_height="331dp"
        app:srcCompat="@drawable/compte24dp" />

    <LinearLayout
        android:id="@+id/ligne"
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_below="@+id/imageView"
        android:weightSum = "2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NOM :"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nom"
            android:layout_width="200dp"
            android:textAlignment = "center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="nom" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ligne1"
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ligne"
        android:weightSum = "2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7lk"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PRENOM :"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prenom"
            android:layout_width="200dp"
            android:textAlignment = "center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="prenom" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ligne1"
        android:weightSum = "2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createff_at"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CREER LE:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/create_at"
            android:layout_width="200dp"
            android:textAlignment = "center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="prenom" />
    </LinearLayout>

</RelativeLayout>